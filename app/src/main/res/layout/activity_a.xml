<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".androidactivity.AActivity">

    <TextView
        android:id="@+id/activityATitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="用于演示Activity的生命周期，配合返回键使用.此Activity被显示启动\n启动模式为栈顶单例，注意Intent的接受方式：onNewIntent"/>

    <Button
        android:id="@+id/acticityAButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activityATitle"
        app:layout_constraintStart_toStartOf="parent"
        android:text="启动ActivityA"
        android:textAllCaps="false"/>
</android.support.constraint.ConstraintLayout>