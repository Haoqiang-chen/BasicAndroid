<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/RetrofitStyle.BroadCast"
    tools:context=".androidbroadcast.BroadcastActivity">

    <!--使用TextAppearance设置Text的样式，但是方法级别最低-->
    <TextView
        android:id="@+id/boradcastActivityDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:text="用于学习广播接收器" />

    <Button
        android:id="@+id/buttonBroadcastRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/boradcastActivityDes"
        android:layout_marginTop="20dp"
        android:text="动态注册广播接收器" />
    <Button
        android:id="@+id/buttonSendBroadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonBroadcastRegister"
        android:layout_marginTop="20dp"
        android:text="发送自定义广播"
        />

    <Button
        android:id="@+id/buttonUnRegisterBroadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonSendBroadcast"
        android:layout_marginTop="20dp"
        android:text="取消注册广播接收器"
        />



</androidx.constraintlayout.widget.ConstraintLayout>